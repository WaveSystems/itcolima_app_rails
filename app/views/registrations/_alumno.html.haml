= form_for @alumno, :url => update_alumno_path(params[:proyecto_id]) do |f|
  %h4 Número de control:
  = @alumno.no_control
  = f.hidden_field :no_control, :enabled => false
  %br
  %h4 Nombre:
  = "#{@alumno.nombre} #{@alumno.apellido_paterno} #{@alumno.apellido_materno}"
  %br
  Promedio:
  = f.text_field :promedio
  %br
  Matricula:
  = f.text_field :matricula
  %br
  Curp:
  = f.text_field :curp
  %br
  Número de identificación (IFE):
  = f.text_field :no_ife
  %br
  Correo electrónico:
  = f.text_field :email
  %br
  Expectativa:
  = f.select :expectativa, Alumno::EXPECTATIVA
  %br
  Semestre:
  = f.select :semestre, Alumno::SEMESTRE
  %br
  Carrera:
  = f.select :carrera, Alumno::CARRERA
  %br
  = f.submit 'Guardar'
